@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


<div class="col-md-10 offset-md-1">
    <br />
    <h4>Sign In</h4>
    <section>
        <form id="account" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserID"></label>
                <input asp-for="Input.UserID" class="form-control" />
                <span asp-validation-for="Input.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
            <hr />

        </form>
        <div class="form-group">
            <p>Register as a new user</p>
            <form id="registerForm" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="register" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </section>
</div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
